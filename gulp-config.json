{
  "image": {
    "src": "./assets/images/**/*.*",
    "dest": "./dist/images"
  },
  "css": {
    "src": "./assets/css/**/*.*",
    "dest": "./dist/css"
  },
  "sass": {
    "src": "./src/sass/**/*.scss",
    "dest": "./dist/css/"
  },
  "js": {
    "src": "./src/app/view",
    "dest": "./dist"
  },
  "apps": [
    {
      "name": "index",
      "src": "app-index.js",
      "html": "index.html"
    },
    {
      "name": "review",
      "src": "app-review.js",
      "html": "index.html"
    },
    {
      "name": "popup",
      "src": "app-popup.js",
      "html": "index.html"
    }
  ]
}
